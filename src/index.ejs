<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>7h3_5h0p</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.6.1/css/font-awesome.min.css">
    <link rel="stylesheet" href="css/main.css">
    <script src="js/jquery-3.2.1.min.js"></script>
</head>
<body>
<div class=background></div>
<div class="page">

    <div class = "header">

        <div class="shop-logo"><span class="shop-logo__text">7h3 5h0p</span></div>
        <!-- <div class="oggetto-logo"><img class="oggetto-logo__pic" src="img/oggetto_logo.svg" alt="Логотип"></div>-->

        <div class="oggetto-logo oggetto-logo__pic"><%-include('img/oggetto_logo.svg')%></div>

           <!-- <img class="oggetto-logo__pic" src="img/oggetto_logo.svg" alt="Логотип"></div> -->

        <a class="phone phone__text" href="tel:+78122128506">+7 (812) 2•12•85•06</a>
        <!--=require img/oggetto_logo.svg-->
        <!--
        %-include(‘img/oggetto_logo.svg’)-%-->
    </div>

    <div class="navigation">
        <div class="navigation__content">
            <div class="menu">
                <i class="menu__icon-bars fa fa-bars" aria-hidden="true"></i>
                <i class="menu__icon-times fa fa-times" aria-hidden="true"></i>

                <div class="menu__links">
                    <ul class="menu__list">
                        <% const menu = ['LISP', 'OCaml', 'JavaScript', 'Python', 'PHP']; %>
                        <% menu.forEach(function(item, index) { %>
                        <li class="menu__item">
                            <a href="#" class="mnavigationenu__link <% if(index == 0) { %>menu__link_active<% } %>"><%= item; %></a>
                        </li>
                        <% }); %>
                    </ul>
                </div>
            </div>
            <form class="search" method="get" action="#">
                <input class="navigation__search" name="search" placeholder="">
            </form>
        </div>
    </div>


    <div class="content">
        <div class="breadcrumbs">
            <ul class="breadcrumbs__list">
                <% const breadcrumbs = ['LISP', '/', 'Одежда', '/', 'Футболки']; %>
                <% breadcrumbs.forEach(function(item, index) { %>
                <li class="breadcrumbs__item">
                    <% if (index % 2 == 0) { %>
                    <a href="#" class="breadcrumbs__link <% if(index == 4) { %>breadcrumbs__link_active<% } %>"><%= item; %></a>
                    <% } else {%>
                    <span class="breadcrumbs__separator">/</span>
                    <% } %>
                </li>
                <% }); %>
            </ul>
        </div>

        <div class="product">

        <div class="product__content">
            <img class="product__pic" src="img/tshirt_white.jpg" alt="Белая футболка" title="Белая футболка">
                <div class="product-info">
                    <div class="product-info__text">
                        <h2 class="product-info__title">Футболка Alien technology</h2>
                        <p class="product-info__description">Состав: 100% хлопок, динамическая типизация, польская нотация. Производство: Россия.</p>
                        <div class="product-info__price">1500₽</div>
                    </div>
                    <div class="product-info__size size">
                        <div class="size__text">Размер:</div>
                        <div class="size__icon">
                            <% const size = ['S', 'M', 'L']; %>
                            <% size.forEach(function(item, index) { %>

                            <p class="size__item size__item_<%= item.toLowerCase(); %> <% if (index == 1) { %>size__item_active<% }%>">
                                <input class="size__radio" name="size" type="radio" value="size__item_<%= item.toLowerCase(); %>" <% if (index == 1) { %>checked <% }%> ><%= item; %>
                            </p>
                            <% }); %>
                        </div>
                    </div>
                    <div class="product-info__color color">
                        <div class="color__text">Цвет:</div>

                        <div class="color__icon">
                            <% const color = ['white', 'yellow', 'green']; %>
                            <% color.forEach(function(item, index) { %>

                            <p class="color__item color__item_<%= item; %> <% if (index == 0) { %>color__item_active<% }%>">
                                <input class="color__radio" name="color" type="radio" value="<%= item; %>" <% if (index == 0) { %>checked <% }%> >
                            </p>
                            <% }); %>
                        </div>
                    </div>
                    <div class="product__buy">
                        <button class="button__buy">Купить</button>
                        <div class="wish-list">
                            <div class="wish-list__heart"><img class="heart heart-like" src="img/heart-button.svg" alt="Лайк"></div>
                            <div class="wish-list__item"><a href="#" class="wish-list__link">Отложить на потом</a></div>
                        </div>
                    </div>
                </div>
        </div>


            <div class="product-info__color color color_show">
                <div class="color__text">Цвет:</div>

                <div class="color__icon color__icon_show">
                    <% color.forEach(function(item, index) { %>

                    <p class="color__item color__item_<%= item; %> <% if (index == 0) { %>color__item_active<% }%>">
                        <input class="color__radio" name="color" type="radio" value="<%= item; %>" <% if (index == 0) { %>checked <% }%> >
                    </p>
                    <% }); %>
                </div>
            </div>

        </div>
    </div>

    <div class="footer">
            <div class="footer__service">
                <div class="service">
                    <div class="service__info">
                        <h4 class="service__title">Сервис и поддержка</h4>
                        <div class="service__links">
                            <ul class="service__list">
                                <% const service1 = ['Как сделать заказ', 'Возврат товара', 'Публичная оферта', 'Доставка']; %>
                                <% service1.forEach(function(item, index) { %>
                                <li class="service__item">
                                    <a href="#" class="service__link"><%= item; %></a>
                                </li>
                                <% }); %>
                            </ul>
                            <ul class="service__list">
                                <% const service2 = ['Способы оплаты', 'Правила продажи', 'Возврат денежных средств', 'Вопросы и ответы']; %>
                                <% service2.forEach(function(item, index) { %>
                                <li class="service__item">
                                    <a href="#" class="service__link"><%= item; %></a>
                                </li>
                                <% }); %>
                            </ul>
                        </div>
                    </div>
                    <div class="service__info">
                        <h4 class="service__title">О компании</h4>
                        <div class="service__links">
                            <ul class="service__list">
                                <% const service3 = ['О нас', 'Контакты', 'Вакансии', 'Партнерам']; %>
                                <% service3.forEach(function(item, index) { %>
                                <li class="service__item">
                                    <a href="#" class="service__link"><%= item; %></a>
                                </li>
                                <% }); %>
                            </ul>
                            <ul class="service__list service__list_last-col">
                                <% const service4 = ['Сертификаты', 'Преимущества', 'Наши скидки']; %>
                                <% service4.forEach(function(item, index) { %>
                                <li class="service__item">
                                    <a href="#" class="service__link"><%= item; %></a>
                                </li>
                                <% }); %>
                            </ul>
                        </div>
                    </div>
                </div>
                <div class="service">
                    <div class="footer__bonus bonus">
                        <ul class="bonus__list">
                            <% const bonus = [
                                {img: 'delivery', alt: 'Доставка', text: 'бесплантая доставка от 4000р'},
                                {img: 'heart', alt: 'Лайк', text: 'пробники в подарок при каждой покупке'},
                                {img: 'cup', alt: 'Доставка',  text: 'акции и подарки за покупку'}
                            ]%>
                            <% bonus.forEach(function(item, index) { %>
                            <li class="bonus__item">
                                <img class="bonus__<%= item.img %>" src="img/<%= item.img %>.svg" alt="<%= item.alt %>"><%= item.text; %>
                            </li>
                            <% }); %>
                        </ul>
                    </div>
                    <div class="footer__social-links social-links">
                        <ul class="social-links__list">

                            <% const references = [
                                {img: 'facebook', alt: 'facebook'},
                                {img: 'twitter', alt: 'twitter'},
                                {img: 'instagram', alt: 'instagram'}
                            ]%>
                            <% references.forEach(function(item, index) { %>
                            <li class="social-links__item">
                                <a href="#" class="social-links__link"><img class="social-links__<%= item.img %>" src="img/<%= item.img %>.svg" alt="<%= item.alt %>"></a>
                            </li>
                            <% }); %>
                        </ul>
                    </div>
                </div>
        </div>
        <hr class="line">
        <div class="copyright">
            <% const copyright = ['2005-2017 © 7h35h0p.ru — модный интернет-магазин одежды, обуви и аксессуаров.', 'Все права защищены. Доставка по всей России!']; %>
            <% copyright.forEach(function(item, index) { %>
            <p class="copyright__text"><%= item %></p>
            <% }); %>
        </div>
    </div>
</div>

<script src="js/scripts.js"></script>

</body>
</html>
